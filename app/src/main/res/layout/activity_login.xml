<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_sign_two"
                tools:context=".LoginActivity" >

    <EditText
            android:id="@+id/login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="102dp"
            android:background="@color/touming"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="请输入手机号码"
            android:textColorHint="@color/gray_deep"
            android:maxLength="11"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20dp" >

        <requestFocus />
    </EditText>

    <TextView
            android:id="@+id/login_repass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去注册"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_below="@+id/login_btn" android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"/>

    <EditText
            android:id="@+id/login_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_phone"
            android:layout_below="@+id/login_phone"
            android:layout_marginTop="22dp"
            android:background="@color/touming"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="登录密码"
            android:maxLength="20"
            android:textColorHint="@color/gray_deep"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20dp" />
    <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:gravity="center"
            android:padding="9dp"
            android:textColor="@color/black"

            android:background="@drawable/black_grey_back"
            android:id="@+id/login_btn" android:layout_below="@+id/login_pass" android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"/>

</RelativeLayout>
